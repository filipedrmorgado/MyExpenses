<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyExpenses" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>


    <!-- Custom Theme for the splash screen -->
    <style name="Theme.MyExpenses.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/defaultPurple</item>
        <!-- Customize other theme attributes if needed -->
    </style>

    <!-- Style for the selected state of timeline buttons -->
    <style name="SelectedTextStyle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for the default state of timeline buttons -->
    <style name="DefaultTextStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>