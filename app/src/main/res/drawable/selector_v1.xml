<!-- selector_option.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Option: Today (Selected) -->
    <item android:state_selected="true"
        android:color="@color/orange"
        android:drawable="@drawable/radius_background_color" />

    <!-- Option: Today (Not Selected) -->
    <item android:color="@color/lightGrey"
        android:drawable="@android:color/transparent" />

    <!-- Option: Week (Selected) -->
    <item android:state_selected="true"
        android:color="@color/orange"
        android:drawable="@drawable/radius_background_color" />

    <!-- Option: Week (Not Selected) -->
    <item android:color="@color/lightGrey"
        android:drawable="@android:color/transparent" />

    <!-- Option: Month (Selected) -->
    <item android:state_selected="true"
        android:color="@color/orange"
        android:drawable="@drawable/radius_background_color" />

    <!-- Option: Month (Not Selected) -->
    <item android:color="@android:color/black"
        android:drawable="@android:color/transparent" />

    <!-- Option: Year (Selected) -->
    <item android:state_selected="true"
        android:color="@android:color/white"
        android:drawable="@drawable/radius_background_color" />

    <!-- Option: Year (Not Selected) -->
    <item android:color="@android:color/black"
        android:drawable="@android:color/transparent" />

</selector>
